    <!-- Supabase JS -->
    <script src="https://unpkg.com/@supabase/supabase-js@2"></script>
    <script>
        // Supabase configuration
        const supabaseUrl = 'YOUR_SUPABASE_URL';
        const supabaseKey = 'YOUR_SUPABASE_KEY';
        const supabase = supabase.createClient(supabaseUrl, supabaseKey);
        
        // Sample teams data (replace with actual FC 25 teams)
        const teams = [
            { id: 1, name: 'Real Madrid', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/5/56/Real_Madrid_CF.svg/1200px-Real_Madrid_CF.svg.png', slots: 5 },
            { id: 2, name: 'Barcelona', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/4/47/FC_Barcelona_%28crest%29.svg/1200px-FC_Barcelona_%28crest%29.svg.png', slots: 5 },
            { id: 3, name: 'Manchester City', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/e/eb/Manchester_City_FC_badge.svg/1200px-Manchester_City_FC_badge.svg.png', slots: 5 },
            { id: 4, name: 'Liverpool', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/0/0c/Liverpool_FC.svg/1200px-Liverpool_FC.svg.png', slots: 5 },
            { id: 5, name: 'Bayern Munich', logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/1b/FC_Bayern_M%C3%BCnchen_logo_%282017%29.svg/1200px-FC_Bayern_M%C3%BCnchen_logo_%282017%29.svg.png', slots: 5 },
            { id: 6, name: 'PSG', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/a/a7/Paris_Saint-Germain_F.C..svg/1200px-Paris_Saint-Germain_F.C..svg.png', slots: 5 },
            { id: 7, name: 'Chelsea', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/c/cc/Chelsea_FC.svg/1200px-Chelsea_FC.svg.png', slots: 5 },
            { id: 8, name: 'Manchester United', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/7/7a/Manchester_United_FC_crest.svg/1200px-Manchester_United_FC_crest.svg.png', slots: 5 },
            { id: 9, name: 'Juventus', logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/Juventus_FC_2017_logo.svg/1200px-Juventus_FC_2017_logo.svg.png', slots: 5 },
            { id: 10, name: 'Inter Milan', logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/0/05/FC_Internazionale_Milano_2021.svg/1200px-FC_Internazionale_Milano_2021.svg.png', slots: 5 },
            { id: 11, name: 'AC Milan', logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/d/d0/Logo_of_AC_Milan.svg/1200px-Logo_of_AC_Milan.svg.png', slots: 5 },
            { id: 12, name: 'Atlético Madrid', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/f/f4/Atletico_Madrid_2017_logo.svg/1200px-Atletico_Madrid_2017_logo.svg.png', slots: 5 },
            { id: 13, name: 'Arsenal', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/5/53/Arsenal_FC.svg/1200px-Arsenal_FC.svg.png', slots: 5 },
            { id: 14, name: 'Tottenham', logo: 'https://upload.wikimedia.org/wikipedia/en/thumb/b/b4/Tottenham_Hotspur.svg/1200px-Tottenham_Hotspur.svg.png', slots: 5 },
            { id: 15, name: 'Borussia Dortmund', logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/6/67/Borussia_Dortmund_logo.svg/1200px-Borussia_Dortmund_logo.svg.png', slots: 5 },
            { id: 16, name: 'Napoli', logo: 'https://upload.wikimedia.org/wikipedia/commons/thumb/2/2d/S.S.C._Napoli_logo.svg/1200px-S.S.C._Napoli_logo.svg.png', slots: 5 }
        ];
        
        // Load teams into the grid and select dropdown
        function loadTeams() {
            const teamsGrid = document.getElementById('teamsGrid');
            const teamSelect = document.getElementById('team');
            
            // Clear existing options except the first one
            while (teamSelect.options.length > 1) {
                teamSelect.remove(1);
            }
            
            // Add teams to grid and select
            teams.forEach(team => {
                // Add to grid
                const teamCard = document.createElement('div');
                teamCard.className = 'team-card';
                teamCard.innerHTML = `
                    <img src="${team.logo}" alt="${team.name}">
                    <div class="team-info">
                        <div class="team-name">${team.name}</div>
                        <div class="team-slots">${team.slots} cupos</div>
                    </div>
                `;
                teamsGrid.appendChild(teamCard);
                
                // Add to select
                const option = document.createElement('option');
                option.value = team.id;
                option.textContent = team.name;
                teamSelect.appendChild(option);
            });
        }
        
        // Update team slots info when team is selected
        document.getElementById('team').addEventListener('change', function() {
            const teamId = this.value;
            const team = teams.find(t => t.id == teamId);
            const slotsInfo = document.getElementById('teamSlotsInfo');
            
            if (team) {
                slotsInfo.textContent = `Cupos disponibles: ${team.slots}`;
            } else {
                slotsInfo.textContent = 'Cupos disponibles: 0';
            }
        });
        
        // Countdown timer
        function updateCountdown() {
            const endDate = new Date('May 17, 2024 23:59:00').getTime();
            const now = new Date().getTime();
            const distance = endDate - now;
            
            if (distance < 0) {
                document.getElementById('countdown').textContent = '¡Inscripciones cerradas!';
                return;
            }
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById('countdown').textContent = `Faltan ${days}d ${hours}h ${minutes}m ${seconds}s`;
        }
        
        // Form submission
        document.getElementById('registrationForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const teamId = document.getElementById('team').value;
            const paymentMethod = document.getElementById('paymentMethod').value;
            const paymentReference = document.getElementById('paymentReference').value;
            
            const selectedTeam = teams.find(t => t.id == teamId);
            
            if (selectedTeam && selectedTeam.slots <= 0) {
                alert('Este equipo ya no tiene cupos disponibles. Por favor selecciona otro.');
                return;
            }
            
            try {
                // Insert into Supabase
                const { data, error } = await supabase
                    .from('tournament_registrations')
                    .insert([
                        { 
                            name: name,
                            phone: phone,
                            team_id: teamId,
                            team_name: selectedTeam.name,
                            payment_method: paymentMethod,
                            payment_reference: paymentReference,
                            registration_date: new Date().toISOString()
                        }
                    ]);
                
                if (error) throw error;
                
                // Show success message
                document.getElementById('registrationForm').style.display = 'none';
                document.getElementById('successMessage').style.display = 'block';
                
                // Update team slots (in a real app, you'd fetch this from the database)
                selectedTeam.slots--;
                document.getElementById('teamSlotsInfo').textContent = `Cupos disponibles: ${selectedTeam.slots}`;
                
                // Update team cards
                loadTeams();
                
            } catch (error) {
                console.error('Error:', error);
                alert('Hubo un error al registrar. Por favor intenta nuevamente.');
            }
        });
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadTeams();
            updateCountdown();
            setInterval(updateCountdown, 1000);
        });
    </script>
